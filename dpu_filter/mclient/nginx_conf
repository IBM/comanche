#If want to setup the server as an HTTP server and do curl, wget or root from client use nginx:
sudo apt update
sudo apt install nginx

cd /etc/nginx/sites-available/

vim config

server {
    listen 80;
    server_name 10.10.10.18;

    location / {
        root /home/nara/root_files;
        index 52557D67-72C0-754B-AC60-7AEE7FF1FD4A.root;
    }
}


sudo ln -s /etc/nginx/sites-available/config /etc/nginx/sites-enabled/config

sudo nginx -t

sudo systemctl restart nginx
#if restart doesn't work do
#sudo systemctl stop apache2

#on client side use
curl http://10.10.10.18/52557D67-72C0-754B-AC60-7AEE7FF1FD4A.root

